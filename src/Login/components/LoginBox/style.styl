$boxBackground = #FCE4EC
$lightGrey = #CCCCCC
$pastelBlue = #90CAF9
$pendingRed = #FF5252
$successGreen = #00E676

.fade-enter-active
.fade-leave-active
    transition opacity .5s

.fade-enter
.fade-leave-active
    opacity: 0

.loginPage
  display grid
  grid-template-columns repeat(12, 1fr)
  grid-template-rows repeat(12, 1fr)
  height 100%
  width 100%

.loginBox
  background-color: $boxBackground
  border-radius 20px
  display: grid
  grid-column 6 / 8
  grid-row 3 / 8
  grid-template-columns 5% repeat(3, 1fr) 5%
  grid-template-rows 5% 2fr 1fr 1fr 5%
  box-shadow 0px 0px 10px black

.icecreamIcon
  grid-column 2 / 5
  grid-row span 2
  align-content center
  width 75%
  background-color white
  border-radius 100%
  display flex
  box-shadow inset 0px 0px 10px 0px black
  align-self center
  justify-self center
  flex-direction column
  height 100%
  max-height 200px
  margin-top 15%
  & > span
    display flex
    justify-content center
    align-items center
    height 100%
    width 100%

@-moz-keyframes fade
  100%
    opacity 1.0
  50%
    opacity 0.0
  0%
    opacity 1.0

@keyframes fade
  100%
    opacity 1.0
  50%
    opacity 0.0
  0%
    opacity 1.0

.icecreamImg
    align-self center
    transform rotate(30deg)
    min-height: 45%

.pending
  animation fade 3s infinite
  -moz-animation fade 3s infinite

.loginImg
  height: 45%
  display flex
  justify-content center
  align-items center
  opacity 1.0
  & > i
    color $pendingRed

.loggedinImg
  height 45%
  display flex
  justify-content center
  align-items center
  opacity 1.0
  & > i
    color $successGreen

.loginInputs
  display flex
  flex-direction column
  grid-column 2 / 5
  grid-row 3 / 4
  height 100%
  justify-content flex-start
  width 100%

.usernameBoxContainer
  margin-top 15%
  border 1px solid $lightGrey
  border-radius 10px
  display flex
  align-items center
  background-color white
  box-shadow inset 0px 0px 5px 0px $lightGrey
  &:focus
    background-color orange

.usernameBoxIcon
  color $pastelBlue
  margin-left 3%
  margin-right 4%
  border-right 1px solid $lightGrey
  padding-right 2%
  font-size 1.75em !important

.usernameBox
  border none
  font-size 0.8em
  background none
  padding 10px
  width 100%
  &:focus
    outline-style none
    outline-color transparent

.passwordBoxContainer
  margin-top 15%
  border 1px solid $lightGrey
  border-radius 10px
  display flex
  align-items center
  background-color white
  box-shadow inset 0px 0px 5px 0px $lightGrey

.passwordBoxIcon
  color $pastelBlue
  margin-left 3%
  margin-right 4%
  border-right 1px solid $lightGrey
  padding-right 2%
  font-size 1.75em !important

.passwordBox
  border none
  font-size 0.8em
  background none
  padding 10px
  width 100%
  &:focus
    outline-style none
    outline-color transparent

.loginButtons
  align-self end
  display flex
  flex-direction row
  grid-column 2 / 5
  grid-row 4
  justify-self center
  height 2em
  width 100%
  color white

.smartLoginIcon
  margin-right 10%
  margin-left 10%
  font-size 1.75em !important

.smartLoginButton
  align-items center
  background-color $pastelBlue
  border none
  border-radius 5px
  display flex
  font-size 0.65em
  margin-left auto
  margin-right auto
  width 45%
  color inherit
  outline-style none
  &:hover
    box-shadow 0px 5px 10px white

.loginIcon
  margin-right 20%
  margin-left 10%
  font-size 1.75em !important

.loginButton
  align-items center
  background-color $pastelBlue
  border none
  border-radius 5px
  display flex
  font-size 0.65em
  margin-left auto
  margin-right auto
  width 45%
  color inherit
  outline-style none
  &:hover
    box-shadow 0px 5px 10px white
